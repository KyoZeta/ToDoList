<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?android:listSeparatorTextViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/task_linerLayout_root"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/task_checkBox_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="17dp" />

            <ImageView
                android:id="@+id/person_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="39dp"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@+id/task_checkBox_completed"
                android:src="@drawable/foto_01" />

            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/task_textView_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/person_photo"
                android:textSize="15sp"
                tools:text="Terminar Proyecto" />

            <TextView
                android:id="@+id/task_TextView_importancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/task_textView_titulo"
                android:textSize="15sp"
                tools:text="Nv.3" />

            <TextView
                android:id="@+id/task_TextView_fechaVencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_textView_titulo"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/task_TextView_userName"
                android:layout_toRightOf="@id/task_TextView_userName"
                tools:text="Para: 13/11/19" />

            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/task_TextView_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_textView_titulo"
                android:layout_toRightOf="@+id/person_photo"
                tools:text="David Ley" />


            <TextView
                android:id="@+id/task_textView_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/task_TextView_fechaVencimiento"
                android:layout_marginStart="92dp"
                tools:text="descripcion bla bla bla" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>